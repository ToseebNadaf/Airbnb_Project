generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mysql"
}

model Booking {
  id             Int           @id @default(autoincrement())
  userId         Int
  hotelId        Int
  checkInDate    DateTime
  checkOutDate   DateTime
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  expiredAt      DateTime?
  releaseAt      DateTime?
  bookingAmount  Int
  roomCategoryId Int
  status         BookingStatus @default(PENDING)
  totalGuests    Int
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  CHECKED_IN
  CHECKED_OUT
  EXPIRED
  FAILED
  REFUNDED
}
