{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",

    "rootDir": "./src",
    "outDir": "./dist",

    "moduleResolution": "bundler",
    "types": ["node"],

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
